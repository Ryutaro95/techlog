<div class="post-list-container container">
  <ul>
    <% posts.each do |post| %>
      <div class="post-list-content posts-content">
        <div class="posts-user-imgs">
          <%= render partial: 'partial/profile_image', locals: { user: post.user } %>
        </div>
        <div class="post-items">
          <li><%= link_to post.title, post, class: "h3" %></li>
          <p>by:<%= link_to post.user.name, user_path(post.user_id) %></p>
          <p>
            <%= post.created_at.to_s(:date_jp) %>に投稿
            <% if post.likes_count %>
              <span>
                <i class="fas fa-thumbs-up"></i><%= post.likes_count %>
              </span>
            <% end %>
          </p>
        </div>
      </div>
    <% end %>
  </ul>
</div>

<div class="paginate">
  <%= paginate posts %>
</div>
