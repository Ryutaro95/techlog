<header>
  <nav class="global-nav navbar navbar-expand-lg">
    <div class="container justify-content-between">
        <%= link_to "TECHLOG", root_path, class: "navbar-brand global-nav-logo" %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon">

            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48">
              <defs>
                <style>
                  .cls-1,
                  .cls-2 {
                    fill: none;
                  }

                  .cls-2 {
                    stroke: #fff;
                    stroke-linecap: round;
                    stroke-linejoin: round;
                    stroke-width: 4px;
                  }
                </style>
              </defs>
              <title>bars_24</title>
              <g id="レイヤー_2" data-name="レイヤー 2">
                <g id="Rect_最後透明に_" data-name="Rect（最後透明に）">
                  <rect class="cls-1" width="48" height="48" />
                </g>
                <g id="icon">
                  <line class="cls-2" x1="10" y1="12" x2="38" y2="12" />
                  <line class="cls-2" x1="10" y1="24" x2="38" y2="24" />
                  <line class="cls-2" x1="10" y1="36" x2="38" y2="36" />
                </g>
              </g>
            </svg>
          </span>
        </button>
  
      <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav navbar-links">
          <% if user_signed_in? %>
          <%= link_to new_post_path, class: "btn-outline-light btn posts-new" do %>
            <i class='fas fa-pen'></i> 記事投稿
          <% end %>
          <li class="nav-item dropdown">
            <%= link_to current_user.name, "#", class: "nav-link dropdown-toggle text-white", id: "navbarDropdown", data: { toggle: :dropdown, role: :button } %>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">

              <p><%= link_to "マイページ", user_path(current_user.id) %></p>
              <p><%= link_to "ストック一覧", stocks_path %></p>
              <p><%= link_to "ユーザー情報変更", edit_user_registration_path(current_user) %></p>
              <% if current_user.admin? %>
                <p><%= link_to "管理者ページ", admin_users_path %></p>
              <% end %>
              <div class="dropdown-divider"></div>
              <%= link_to "ログアウト", destroy_user_session_path, class: "text-danger text-center d-block", method: :delete %>
            </div>
          </li>
          <% else %>
            <%= form_with model: User.new, url: new_user_session_path do |f| %>
              <%= f.hidden_field :email, value: "kantan@user.com" %>
              <%= f.hidden_field :password, value: "password" %>
              <%= f.submit "かんたんログイン", class:"btn btn-outline-light mr-2"%>
            <% end %>
            <li><%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-light h-sign-in-btn" %></li>
            <li><%= link_to "アカウント作成", new_user_registration_path, class: "btn btn-outline-dark h-sign-up-btn" %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>